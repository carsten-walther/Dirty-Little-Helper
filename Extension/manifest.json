{
  "manifest_version": 3,

  "name": "Dirty Little Helper",
  "version": "3.0.0",
  "description": "Dirty Little Helper - Developer Tool Set",

  "icons": {
    "16": "images/icon-16x16.png",
    "32": "images/icon-32x32.png",
    "48": "images/icon-48x48.png",
    "128": "images/icon-128x128.png"
  },

  "action": {
    "default_icon": {
      "16": "images/icon-16x16.png",
      "32": "images/icon-32x32.png",
      "48": "images/icon-48x48.png",
      "128": "images/icon-128x128.png"
    },
    "default_popup": "popup/index.html",
    "default_title": "Dirty Little Helper"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "contextMenus",
    "background",
    "webRequest"
  ],

  "host_permissions": [
    "<all_urls>",
    "*://*/*"
  ],

  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "content/a11y.css/a11y-en_advice.css",
        "content/a11y.css/a11y-en_error.css",
        "content/a11y.css/a11y-en_obsolete.css",
        "content/a11y.css/a11y-en_warning.css"
      ]
    }
  ],

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_end"
    }
  ]
}
